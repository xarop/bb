    <div data-size="medium" data-align="center">
      <h1>{{ titleHtml }}</h1>
      {{ contentHtml|e('wp_kses_post') }}
      <a href="{{ buttonUrl }}" class="btn">{{ buttonText }}</a>
    </div>
